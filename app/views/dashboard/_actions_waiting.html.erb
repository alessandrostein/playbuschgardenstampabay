<div class="box">
  <div class="title">
    <h1><i class="fa fa-heart"></i> Ações finalizadas</h1>
  </div>

  <div class="row box-table table-header">
    <div class="col-sm-2">
      <p>Situação</p>
    </div>
    <div class="col-sm-2">
      <p>Ação</p>
    </div>
    <div class="col-sm-3">
    </div>
    <div class="col-sm-2">
      <p>Expira em</p>
    </div>
    <div class="col-sm-2">
      <p>Criado por</p>
    </div>
  </div>

  <% current_user.actions.where(status: 1).each do |action| %>
    <div class="row box-table">
      <div class="col-sm-2">
        <p><span class="lg-status status-waiting">Pendente</span></p>
      </div>
      <div class="col-sm-2">
        <p><%= action.task.try(:title) %></p>
      </div>
      <div class="col-sm-3">
        <p><%= link_to 'Ver detalhes', "#", class: "btn-sm btn-info" %></p>
      </div>
      <div class="col-sm-2">
        <p><%= distance_of_time_in_words(Date.today, action.task.try(:expires_on)) %></p>
      </div>
      <div class="col-sm-3">
        <p>
          <%= render 'panel/shared/avatar', user_name: action.task.user.name %>
          <div class="player">
            <%= action.task.user.name %>
          </div>
        </p>
      </div>
    </div>
  <% end %>
</div>
